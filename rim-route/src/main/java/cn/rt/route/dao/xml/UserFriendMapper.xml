<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.rt.route.dao.UserFriendMapper">
  <resultMap id="BaseResultMap" type="cn.rt.common.entity.UserFriend">
    <!--
      WARNING - @mbg.generated
    -->
    <id column="user_id" jdbcType="VARCHAR" property="userId" />
    <id column="friend_id" jdbcType="VARCHAR" property="friendId" />
  </resultMap>

  <select id="getFriendId" parameterType="string" resultType="string">
    select
        friend_id as 'friendId'
    from
        user_friend
    where
        user_id = #{userId}
    union all select
        user_id as 'friendId'
    from
        user_friend
    where
        friend_id = #{userId}
  </select>
</mapper>